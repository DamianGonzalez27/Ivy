{
    "name": "Ivy Api",
    "version": "1.0.0",
    "url": "https://localhost:8000",
    "endpoints": [
        {
            "name": "clientes",
            "options": {
                "class": "\\App\\Endpoints\\Cliente",
                "methods": {
                    "todos":{
                        "function": "todos",
                        "permissions": "CLIENTE_READ"
                    },
                    "all":{
                        "function": "getUsers",
                        "filters":{
                            "orderByAge": {
                                "class": "\\App\\Filters\\OrderBy",
                                "index": "age"
                            }
                        },
                        "permissions": "CLIENTE_READ"
                    },
                    "single":{
                        "function": "getUser", 
                        "params": {
                            "id": "required"
                        },
                        "permissions": "CLIENTE_READ"
                    }
                }
            }
        },
        {
            "name": "test",
            "options": {
                "class": "\\App\\Actions\\UserActions",
                "services": [
                    "mail"
                ],
                "methods": {
                    "all":{
                        "function": "getUsers",
                        "filters":{
                            "orderByAge": {
                                "class": "\\App\\Filters\\OrderBy",
                                "index": "age"
                            }
                        },
                        "permissions": "USER_READ"
                    },
                    "single":{
                        "function": "getUser", 
                        "params": {
                            "id": "required"
                        },
                        "permissions": "USER_READ"
                    }
                }
            }
        }
    ]
}